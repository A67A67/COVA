<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>cova-root</artifactId>
    <groupId>de.upb.swt</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.upb.swt</groupId>
  <artifactId>cova</artifactId>
  <name>cova</name>
  <version>0.0.1-SNAPSHOT</version>
  <url>http://maven.apache.org</url>
  <build>
    <testOutputDirectory>${testOutputDir}</testOutputDirectory>
    <directory>${buildDir}</directory>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>cova.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.21.0</version>
        <configuration>
          <argLine>@{argLine}
						-Djava.library.path=${dependencyDir}/${z3proverDir}/bin/</argLine>
          <groups>categories.BenchmarkTestSuite,
						categories.UnitTestSuite,</groups>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>0.7.5.201505241946</version>
        <executions>
          <execution>
            <id>default-prepare-agent</id>
            <phase>compile</phase>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <id>post-unit-test</id>
            <phase>test</phase>
            <goals>
              <goal>report</goal>
            </goals>
            <configuration>
              <dataFile>${buildDir}/jacoco.exec</dataFile>
              <outputDirectory>${buildDir}/site</outputDirectory>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <skip>${jacoco.skip.instrument}</skip>
          <excludes>
            <exclude>**/*.jar</exclude>
            <exclude>${testOutputDir}/**</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>Profile for Windows</id>
      <properties>
        <z3proverDir>z3-4.5.0-x64-win</z3proverDir>
      </properties>
    </profile>
    <profile>
      <id>Profile for Linux</id>
      <properties>
        <z3proverDir>z3-4.5.0-x64-ubuntu</z3proverDir>
      </properties>
    </profile>
    <profile>
      <id>codecoverage</id>
      <properties>
        <jacoco.skip.instrument>false</jacoco.skip.instrument>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>soot-snapshot</id>
      <name>soot snapshots</name>
      <url>https://soot-build.cs.uni-paderborn.de/nexus/repository/soot-snapshot/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>covaanalyst</groupId>
      <artifactId>constraintBench</artifactId>
      <version>0.0.1-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <testOutputDir>target/test-classes</testOutputDir>
    <dependencyDir>${project.basedir}/localLibs</dependencyDir>
    <jacoco.skip.instrument>true</jacoco.skip.instrument>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <buildDir>target</buildDir>
  </properties>
</project>

